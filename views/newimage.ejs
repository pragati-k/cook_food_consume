<%- include("partials/header")%>

	<div class="row">
		<h1>Add an Image</h1>
		<div>
			<form action = "/images" method = "POST" enctype="multipart/form-data">
				<div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" max-size="31744"accept="image/*" required>
                </div>
				<div class = "field">
					<label>Blog</label>
					<textarea  name = "description" required rows="10" cols="100" maxlength = "1000"><h3 style="color: #026670"><i>ENTER TITLE</i></h3><hr></textarea>
				</div>
				<div class = "form-group">
					<button class = "btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href = "/images">Go Back</a>
		</div>
	</div>

<%- include("partials/footer")%>